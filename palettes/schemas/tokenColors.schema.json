{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BioNotation Token Colors Schema",
  
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    
    "tokenColors": {
      "type": "array",
      "items": {
        "type": "object",
        
        "properties": {
          "name": { "type": "string" },
          
          "scope": {
            "type": ["string", "array"],
            "items": { "type": "string" }
          },
        
          "settings": {
            "type": "object",
            
            "properties": {
              
              "foreground": {
                "type": "string",
                "pattern": "^#([A-Fa-f0-9]{6})$",
                "format": "color-hex"
              },
        
              "background": {
                "type": "string",
                "pattern": "^#([A-Fa-f0-9]{6})$",
                "format": "color-hex"
              },
        
              "fontStyle": {
                "type": "string",
                "enum": ["", "bold", "italic", "underline"]
              }
            }
          }
        },
        "required": ["scope", "settings"]
      }
    }
  },
  "required": ["tokenColors"]
}
