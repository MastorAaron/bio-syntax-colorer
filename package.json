{
    "name": "bio-colorer",
    "displayName": "Colored BioNotation",
    "description": "Custom overlay intended to Highlight FastA and FastQ files in Dark Mode Warm Color Pallete",
    "publisher": "The A177",
    "version": "0.0.53",
    "repository": {
        "type": "git",
        "url": "https://github.com/MastorAaron/bio-syntax-colorer"
    },
 
    "exclude": [
        ".vscode/",
        ".git/",
        "README.md"
    ],
    "main": "./dist/extension.js",
    "files": [
        "dist",
        "palettes",
        "syntaxes"
    ],
        "activationEvents": [
            "onLanguage:fasta",
            "onCommand:bioNotation.toggleColors",
            "onCommand:bioNotation.selectPalette"
        ],
    "engines": {
        "vscode": "^1.101.0"
    },
    "contributes": {
        "commands": [
            {
                "command": "bioNotation.toggleColors",
                "title": "Toggle BioNotation Colors"
            },
            {
                "command": "bioNotation.selectPalette",
                "title": "Select BioNotation Color Palette"
            }
        ],
        "configuration": {
            "title": "BioNotation",
            "properties": {
                "bioNotation.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Controls whether BioNotation Syntax colors are applied."
                }
            }
        },

        "bio-colorer.notationMode": {
            "type": "string",
            "default": "mixed",
            "enum": ["mixed", "nucleotide", "amino"],
            "description": "Controls how ambiguous symbols in FASTA files are interpreted: mixed (default), nucleotide, or amino acid."
        },

        "languages": [
            {
                "id": "fasta",
                "aliases": [
                    "FASTA",
                    "fasta"
                ],
                "extensions": [
                    ".fastq",
                    ".fasta",
                    ".fa"
                ],
                "configuration": "./src/syntaxes/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fasta",
                "scopeName": "source.fasta",
                "path": "./src/syntaxes/fasta.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "test": "jest --config ./jest.config.ts",
        "test:watch": "jest --config ./jest.config.ts --watch",
        "tsc":      "tsc -p tsconfig.json",
        "build":    "tsc -p tsconfig.build.json",
        "package":  "npm run build && npx vsce package",
        "clean": "rm -rf dist"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/vscode": "^1.101.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
