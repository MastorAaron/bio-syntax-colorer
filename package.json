{
    "name": "bio-colorer",
    "displayName": "BioNotation Text Colorer",
    "description": "Custom overlay intended to Highlight FastA and FastQ files in Dark Mode",
    "publisher": "The_A177",
    "version": "0.0.81",
    "repository": {
        "type": "git",
        "url": "https://github.com/MastorAaron/bio-syntax-colorer"
    },
 
    "exclude": [
        ".vscode/",
        ".git/",
        "README.md"
    ],
    "main": "./dist/extension.js",
    "files": [
        "dist",
        "palettes",
        "syntaxes"
    ],
        "activationEvents": [
            "onLanguage:fasta",
            "onCommand:bioNotation.toggleColorsOverlay",
            "onCommand:bioNotation.toggleAlphabet",
            "onCommand:bioNotation.toggleHighLight",
            "onCommand:bioNotation.OnUninstall",
            "onCommand:bioNotation.selectPalette"
        ],
    "engines": {
        "vscode": "^1.101.0"
    },
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": [
                    "*-colors-*.json"
                ],
                "url": ".schemas/tokenColors.schema.json"
            }
        ],

        "commands": [
            {
                "command": "bioNotation.toggleColorsOverlay",
                "title": "BioNotation: Toggle Colors"
            },
            {
                "command": "bioNotation.toggleAlphabet",
                "title": "BioNotation: Toggle DNA/Protein Alphabets"
            },  
            {
                "command": "bioNotation.toggleHighLight",
                "title": "BioNotation: Set Highlight Tool"
            },
            {
                "command": "bioNotation.OnUninstall",
                "title": "BioNotation: Before Uninstall: Remove all from text rules from Workspace Settings"
            },
            {
                "command": "bioNotation.selectPalette",
                "title": "BioNotation: Select Color Palette"
            }
        ],
        "configuration": {
            "title": "BioNotation",
            "properties": {
                "bioNotation.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Controls whether BioNotation Syntax colors are applied."
                },
                "bioNotation.alphabet": {
                    "type": "string",
                    "default": "Ambiguous",
                    "enum": ["Ambiguous", "Nucleotides", "Aminos"],
                    "description": "Determine Alphabet for HoverOver Info:\n Protein: Aminos\n DNA/RNA: Nucleotides\n Default: Ambigious"
                }
            }
        },

        "languages": [
            {
                "id": "fasta",
                "configuration": "./syntaxes/fasta.language-configuration.json",
                "aliases": [
                    "FASTA",
                    "fasta"
                ],
                "extensions": [ ".fasta", ".fa", ".fastq" ]
            },
            {
                "id": "fastq",
                "configuration": "./syntaxes/fastq.language-configuration.json",
                "aliases": [
                    "FASTQ",
                    "fastq"
                ],
                "extensions": [ ".fastq", ".fna", ".faa" ]
            }
        ],
        "grammars": [
            {
                "language": "fasta",
                "scopeName": "source.fasta",
                "path": "./syntaxes/fasta.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "test": "jest --config ./jest.config.ts",
        "test:watch": "jest --config ./jest.config.ts --watch",
        "tsc":      "tsc -p tsconfig.json",
        "build":    "tsc -p tsconfig.build.json",
        "package":  "npm run clean && npm run build && npx vsce package",
        "clean": "rm -rf dist && python ./devTools/colorSliderToggle.py ./palettes --remove-only && code --uninstall-extension \"the_a177.bio-colorer\"",
        "install": "code --install-extension bio-colorer-$(node -p \"require('./package.json').version\").vsix",
        "uninstall": "code --uninstall-extension \"the_a177.bio-colorer\""
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/vscode": "^1.101.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
