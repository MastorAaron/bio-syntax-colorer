{
    "name": "bio-colorer",
    "displayName": "Colored BioNotation",
    "description": "Custom overlay intended to Highlight FastA and FastQ files in Dark Mode Warm Color Pallete",
    "publisher": "The A177",
    "version": "0.0.45",
    "repository": {
        "type": "git",
        "url": "https://github.com/MastorAaron/bio-syntax-colorer"
    },
    "files": [
        "extension.js",
        "patch.js",
        "fasta.tmLanguage.json",
        "fasta-colors.json",
        "syntaxes/language-configuration.json"
    ],
    "exclude": [
        ".vscode/",
        ".git/",
        "README.md"
    ],
    "main": "./extension.js",
    "activationEvents": [
        "onLanguage:fasta",
        "onCommand:bioNotation.toggleColors"
    ],
    "engines": {
        "vscode": "^1.85.0"
    },
    "contributes": {
        "commands": [
            {
                "command": "bioNotation.toggleColors",
                "title": "Toggle BioNotation Colors"
            }
        ],
        "configuration": {
            "title": "BioNotation",
            "properties": {
                "bioNotation.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Controls whether BioNotation Syntax colors are applied."
                }
            }
        },
        "languages": [
            {
                "id": "fasta",
                "aliases": [
                    "FASTA",
                    "fasta"
                ],
                "extensions": [
                    ".fastq",
                    ".fasta",
                    ".fa"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fasta",
                "scopeName": "source.fasta",
                "path": "./syntaxes/fasta.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watchAll",
        "tsc": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/vscode": "^1.101.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
